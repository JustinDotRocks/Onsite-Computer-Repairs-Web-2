---
import BaseLayout from '../layouts/BaseLayout.astro';
import { services, SITE } from '@config/site';
import Card from '../components/ui/Card.astro';
---

<BaseLayout title={`Services | ${SITE.title}`} description={`Computer repair services: virus removal, hardware repair, software installs, tune-ups, data recovery. On-site service. ${SITE.tagline}`}>
  <section class="px-4 py-16 sm:px-6 sm:py-24">
    <div class="container mx-auto max-w-6xl">
      <div class="flex flex-col md:flex-row md:items-center md:gap-12 gap-8 mb-16">
        <div class="flex justify-center md:justify-end shrink-0">
          <img src="/logo-1.png" alt="" class="h-40 w-auto md:h-56 block" width="200" height="200" role="presentation" />
        </div>
        <div class="text-center md:text-left">
          <h1 class="text-4xl md:text-5xl font-bold text-[var(--color-primary)] mb-4">Our services</h1>
          <p class="text-lg text-[var(--color-text-muted)] max-w-xl">
            We offer a range of computer repair and support services. All work can be done on-site at your home or office in St. John's and the surrounding area.
          </p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <Card hover class="border-[var(--color-grey-light)]">
            <h2 class="text-xl font-bold text-[var(--color-primary)] mb-2">{service.title}</h2>
            <p class="text-[var(--color-text-muted)]">{service.description}</p>
          </Card>
        ))}
      </div>

      <p class="mt-16 text-center text-[var(--color-text-muted)]">
        Need something not listed? <a href="/contact" class="text-[var(--color-primary)] font-semibold hover:underline">Get in touch</a> and we'll see how we can help.
      </p>

      <div class="mt-12 text-center">
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white rounded-lg shadow-lg transition-all"
          style="background-color: var(--color-primary);"
        >
          Contact us for a quote
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
