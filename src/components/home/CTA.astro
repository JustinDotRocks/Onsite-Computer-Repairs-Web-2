---
import { SITE } from '@config/site';
---

<section class="py-24 text-white" style="background-color: var(--color-primary);">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to get started?</h2>
    <p class="text-xl text-white/90 mb-10 max-w-xl mx-auto">
      Call or email for a quote. We're happy to help.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href={`tel:${SITE.phone.replace(/\D/g, '')}`}
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-white text-[var(--color-primary)] hover:bg-white/90 rounded-lg shadow-lg transition-all"
      >
        Call {SITE.phone}
      </a>
      <a
        href={`mailto:${SITE.email}`}
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold border-2 border-white text-white hover:bg-white/10 rounded-lg transition-all"
      >
        Email us
      </a>
    </div>
    <p class="mt-8 text-white/80">{SITE.tagline}</p>
  </div>
</section>
