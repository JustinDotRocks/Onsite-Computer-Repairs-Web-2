---
import { Image } from 'astro:assets';
import { SITE } from '@config/site';
import heroBgImg from '@assets/photo-1586528116311-ad8dd3c8310d.jpg';
---

<section class="relative min-h-[600px] flex items-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <Image
      src={heroBgImg}
      alt="Professional computer repair and tech support"
      class="w-full h-full object-cover"
      width={2070}
      height={1380}
      decoding="async"
      fetchpriority="high"
    />
    <div class="absolute inset-0 bg-linear-to-r from-slate-900/95 via-slate-900/80 to-slate-900/50"></div>
  </div>

  <!-- Content: flex so logo sits directly beside text; no max-width so logo isn't clipped -->
  <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8 py-20 flex items-center">
    <div class="flex flex-col lg:flex-row lg:items-center w-full max-w-7xl gap-8 lg:gap-4">
      <!-- Text block: fixed max width -->
      <div class="min-w-0 max-w-4xl lg:shrink-0">
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-2 leading-tight">
          {SITE.title}
        </h1>
        <p class="text-xl md:text-2xl text-slate-200 mb-6">
          {SITE.tagline}
        </p>

        <p class="text-xl md:text-2xl text-slate-200 mb-8 max-w-2xl leading-relaxed">
          Virus removal, hardware repair, tune-ups, data recovery, and more. We come to youâ€”at home or office.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 mb-12">
          <a
            href={`tel:${SITE.phone.replace(/\D/g, '')}`}
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white rounded-lg shadow-2xl transition-all"
            style="background-color: var(--color-primary);"
          >
            Call {SITE.phone}
          </a>
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white rounded-lg shadow-2xl hover:bg-white/10 transition-all"
          >
            Contact us
          </a>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 pt-8 border-t border-white/20">
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">On-site</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">We come to you</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">Fast</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">Same-day when possible</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">Repair</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">Hardware & software</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">Recovery</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">Data when possible</div>
          </div>
        </div>
      </div>

      <!-- Logo: beside text on desktop (pulled much closer with large -ml), below on mobile -->
      <div class="flex items-center justify-center lg:justify-start shrink-0 min-w-[200px] lg:-ml-80">
        <img
          src="/logo-1.png"
          alt="On Site Computer Repairs"
          class="block object-contain w-auto h-64 lg:h-[32rem]"
          width="280"
          height="280"
        />
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
