---
import { services } from '@config/site';
import Card from '../ui/Card.astro';
---

<section class="py-24 bg-[var(--color-grey-light)]/50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 bg-[var(--color-primary)]/10 text-[var(--color-primary)] text-sm font-semibold rounded-full">
        What we offer
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-text)] mb-6">
        Our <span class="gradient-text">Services</span>
      </h2>
      <p class="text-xl text-[var(--color-text-muted)] max-w-3xl mx-auto leading-relaxed">
        From virus removal to hardware repair and on-site visitsâ€”we've got you covered.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.slice(0, 6).map((service) => (
        <Card hover class="border-[var(--color-grey-light)]">
          <h3 class="text-xl font-bold text-[var(--color-primary)] mb-2">{service.title}</h3>
          <p class="text-[var(--color-text-muted)]">{service.description}</p>
        </Card>
      ))}
    </div>

    <div class="text-center mt-16">
      <a
        href="/services"
        class="inline-flex items-center px-8 py-4 text-base font-semibold text-white rounded-lg shadow-lg transition-all group"
        style="background-color: var(--color-primary);"
      >
        View all services
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
