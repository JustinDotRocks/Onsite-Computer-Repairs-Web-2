---
import { NAVIGATION, SOCIAL_LINKS, SITE } from '@config/site';
import { Linkedin, Twitter, Facebook } from 'lucide-react';
---

<footer class="bg-[var(--color-primary)] text-[var(--color-white)]">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-4">
      <!-- Company Info -->
      <div class="lg:col-span-1 space-y-6">
        <a href="/" class="flex items-center space-x-3 group focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--color-primary-bright)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--color-primary)] rounded-lg">
          <img src="/logo-1.png" alt="" class="h-12 w-auto block" width="48" height="48" role="presentation" />
          <span class="text-xl font-bold text-[var(--color-white)]">
            {SITE.title}
          </span>
        </a>
        <p class="text-sm text-[var(--color-white)]/90 leading-relaxed max-w-xs">
          {SITE.tagline}
        </p>
        <div class="flex space-x-4">
          <a
            href={SOCIAL_LINKS.linkedin}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-white/10 text-[var(--color-white)] hover:bg-white/20 transition-all"
            aria-label="LinkedIn"
          >
            <Linkedin className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.twitter}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-white/10 text-[var(--color-white)] hover:bg-white/20 transition-all"
            aria-label="Twitter"
          >
            <Twitter className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.facebook}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-white/10 text-[var(--color-white)] hover:bg-white/20 transition-all"
            aria-label="Facebook"
          >
            <Facebook className="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-[var(--color-white)] mb-6">
          Quick Links
        </h3>
        <ul class="space-y-3">
          {NAVIGATION.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-[var(--color-white)]/90 hover:text-[var(--color-white)] transition-colors inline-flex items-center group"
              >
                <span class="w-0 group-hover:w-2 h-0.5 bg-[var(--color-white)] transition-all mr-0 group-hover:mr-2"></span>
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-[var(--color-white)] mb-6">
          Services
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/services" class="text-sm text-[var(--color-white)]/90 hover:text-[var(--color-white)] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[var(--color-white)] transition-all mr-0 group-hover:mr-2"></span>
              Virus & Malware Removal
            </a>
          </li>
          <li>
            <a href="/services" class="text-sm text-[var(--color-white)]/90 hover:text-[var(--color-white)] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[var(--color-white)] transition-all mr-0 group-hover:mr-2"></span>
              Hardware Repair
            </a>
          </li>
          <li>
            <a href="/services" class="text-sm text-[var(--color-white)]/90 hover:text-[var(--color-white)] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[var(--color-white)] transition-all mr-0 group-hover:mr-2"></span>
              Tune-Ups & Performance
            </a>
          </li>
          <li>
            <a href="/services" class="text-sm text-[var(--color-white)]/90 hover:text-[var(--color-white)] transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-[var(--color-white)] transition-all mr-0 group-hover:mr-2"></span>
              On-Site Service
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-[var(--color-white)] mb-6">
          Contact
        </h3>
        <ul class="space-y-3 text-sm text-[var(--color-white)]/90">
          <li>
            <a href={`tel:${SITE.phone.replace(/\D/g, '')}`} class="hover:text-[var(--color-white)] transition-colors">
              {SITE.phone}
            </a>
          </li>
          <li>
            <a href={`mailto:${SITE.email}`} class="hover:text-[var(--color-white)] transition-colors break-all">
              {SITE.email}
            </a>
          </li>
        </ul>
        <div class="mt-8">
          <a
            href="/contact"
            class="inline-flex items-center px-6 py-3 text-sm font-semibold text-[var(--color-primary)] bg-white hover:bg-[var(--color-white)]/90 rounded-lg shadow-lg transition-all"
          >
            Get in touch
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-white/20">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
        <p class="text-sm text-[var(--color-white)]/80">
          &copy; {new Date().getFullYear()} {SITE.author}. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
